@model Playlistofy.Models.Playlist

@{ ViewData["Title"] = "Create"; }

<style>
    table.b {
        table-layout: fixed;
        width: 100%;
    }

    div.div_a:hover {
        table-layout: auto;
        width: 100%;
        opacity: .8;
        background: url('https://images.unsplash.com/photo-1584882793511-33ac865aedb7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80');
    }

    div.div_a {
        table-layout: auto;
        width: 100%;
        opacity: 1.0;
        background: url('https://images.unsplash.com/photo-1584882793511-33ac865aedb7?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80');
    }

    div.div_b {
        background: url('https://i.pinimg.com/originals/2a/76/17/2a761787715ca71788aad1a28ab057ac.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100%;
        overflow: hidden;
        width: 100%;
        opacity: 0.8;
    }
</style>
<body>
    <div class="div_b">
        <center><h1><b>Create Your Own playlist</b></h1></center>
        <center><h4><i>(Choose a good name and a good description to make your playlist stand out)</i></h4></center>
        <hr />
        <div style="text-align:center">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="div_a">
                    <table class="b">
                        <tr>
                            <td>
                                <div class="form-group">
                                    <center>
                                        <h4><label asp-for="Name" class="control-label"></label></h4>
                                        <input style="height:40px; width:350px;" asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </center>

                                    @*<div class="form-group">
                                            <label asp-for="Id" class="control-label"></label>
                                            <input asp-for="Id" class="form-control" />
                                            <span asp-validation-for="Id" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="UserId" class="control-label"></label>
                                            <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
                                        </div>*@
                                    @*<div class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Public" /> @Html.DisplayNameFor(model => model.Public)
                                            </label>
                                        </div>
                                        <div class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Collaborative" /> @Html.DisplayNameFor(model => model.Collaborative)
                                            </label>
                                        </div>*@
                                    @*<div class="form-group">
                                            <label asp-for="Href" class="control-label"></label>
                                            <input asp-for="Href" class="form-control" />
                                            <span asp-validation-for="Href" class="text-danger"></span>
                                        </div>*@
                                    @*<div class="form-group">
                                            <label asp-for="Uri" class="control-label"></label>
                                            <input asp-for="Uri" class="form-control" />
                                            <span asp-validation-for="Uri" class="text-danger"></span>
                                        </div>*@
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <center>
                                        @*<label asp-for="Description" class="control-label"></label>*@
                                        <textarea rows="10" cols="100" asp-for="Description" placeholder="Enter description here..."></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </center>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <center>
                                        <label>Enter Keywords and Hashtags Here! More Than One Keyword or Hashtag is Acceptable</label>
                                        <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="Enter Tags Here..." pattern=".{2,}" required title="2 characters minimum" />
                                        <input type="hidden" id="itemId" name="itemId" />
                                    </center>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </form>
        </div>
    </div>
    <center>
        <div>
            <h4><a asp-action="UserPlaylists"><b>Back</b></a></h4>
        </div>
    </center>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />
}